{
  "name": "opus4-repo/search",
  "description": "OPUS 4 search implementation based on Solr.",
  "license": "GPL-2.0+",
  "type": "library",
  "keywords": [
    "opus4",
    "solr"
  ],
  "homepage": "http://www.opus-repository.org",
  "require": {
    "php": ">=5.6",
    "ext-xsl": "*",
    "ext-dom": "*",
    "solarium/solarium": "3.8.*",
    "opus4-repo/framework": "4.7.x-dev",
    "opus4-repo/opus4-common": "dev-master",
    "zendframework/zendframework1": "1.12.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.24",
    "phpunit/dbunit": "~1.3",
    "phpunit/php-invoker": "~1.1",
    "phpunit/phpunit-selenium": "1.4.2",
    "zendframework/zend-coding-standard": "~1.0.0",
    "phpmd/phpmd": "@stable",
    "phploc/phploc": "@stable"
  },
  "autoload": {
    "psr-4": {
      "Opus\\Search\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpusTest\\Search\\": "test/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover build/clover.xml",
    "cs-check": "phpcs -n",
    "cs-fix": "phpcbf",
    "phpmd": "phpmd src xml cleancode,unusedcode,design,naming --reportfile build/phpmd.xml",
    "phploc": "phploc --log-csv build/phploc.csv src"
  }
}
